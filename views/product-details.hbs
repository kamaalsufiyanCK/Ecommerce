<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <title>product-details</title>
  </head>
  <body>
    <div class="container my-5">
      <div class="row g-5 align-items-start">

        <div class="col-lg-6 text-center">
          <div class="border rounded p-4 bg-light">
            <img
              src="{{product.image}}"
              alt="{{product.name}}"
              class="img-fluid"
              style="max-height: 420px; object-fit: contain;"
            />
          </div>
        </div>

        <div class="col-lg-6">
          <h2 class="fw-bold mb-3">{{product.name}}</h2>

          <p class="text-muted fs-6">
            {{product.description}}
          </p>

          <div class="my-3">
            <span class="fs-3 fw-bold text-success">â‚¹{{product.price}}</span>

            {{#if product.oldPrice}}
              <span class="fs-6 text-muted text-decoration-line-through ms-2">
                â‚¹{{product.oldPrice}}
              </span>
              <span class="badge bg-success ms-2">
                {{product.offer}}% OFF
              </span>
            {{/if}}
          </div>

          <div class="mb-3 text-muted">
            <p class="mb-1">ðŸšš Free Delivery</p>
            <p class="mb-1">ðŸ”„ 7 Days Replacement</p>
            <p class="mb-1">ðŸ’³ Cash on Delivery Available</p>
          </div>

          <div class="d-flex gap-3 mt-4">
            <button class="btn btn-warning btn-lg px-5">
              ðŸ›’ Add to Cart
            </button>

            <a href="/Buynow/{{productid}}" class="btn btn-primary btn-lg px-5">
              âš¡ Buy Now
            </a>
          </div>

          <div class="mt-4">
            <h6 class="fw-bold">Highlights</h6>
            <ul class="text-muted">
              <li>Professional DSLR Camera</li>
              <li>High-resolution sensor</li>
              <li>Perfect for photography & videography</li>
            </ul>
          </div>
        </div>

      </div>
    </div>
    <hr />

